<section class="section">
<div class="container">

<h1 class="title">{{filename}}</h1>
<h1 class="subtitle">From <a href="#/browsehost/{{certfp}}">{{hostname}}</a></h1>

<div class="columns">
	<div class="column">

<div class="field has-addons">
	<div class="control">
		<a class="button is-static">
			Modified
		</a>
	</div>
	<div class="control has-icons-left">
		<div class="select">
			<select id="selectVersion">
				{{#each versions}}
				<option value="{{fileId}}">{{formatDateTime lastModified}}</option>
				{{/each}}
			</select>
		</div>
		<span class="icon is-left">
			<i class="far fa-clock fa-lg"></i>
		</span>
	</div>
	{{#if isNewestVersion}}
	<div class="control">
		<a class="button is-static">
			Newest version
		</a>
	</div>
	{{/if}}
	{{#if isDeleted}}
	<div class="control">
		<a class="button is-danger">
			Deleted
		</a>
	</div>
	{{/if}}
</div>

	</div>
	<div class="column">

<div class="field">
	<div class="control">
		<a class="button is-light" id="diffbutton">
			<span class="icon is-small">
				<!-- <i class="fas fa-check-square"></i> -->
				<i class="far fa-square"></i>
			</span>
			<span>Show diff</span>
		</a>
	</div>
</div>

	</div>
</div>

<div class="filecontent">{{content}}</div>

</div></section>
