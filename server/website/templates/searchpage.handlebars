<section class="section">
	<div class="container">
		<div class="field has-addons">
			<div class="control has-icons-left">
				<input class="input" type="text" name="q"
					id="search" placeholder="Search for..."
					value="{{query}}">
				<span class="icon is-small is-left">
					<i class="fas fa-search"></i>
				</span>
			</div>
			<div class="control">
				<button id="searchButton" class="button is-info">Search</button>
			</div>
		</div>
		<br>
		<div id="searchSpinner" class="is-not-displayed position-absolute">
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<span class="icon">
				<i class="fas fa-cog fa-3x fa-spin"></i>
			</span>
		</div>
		<div id="searchResult">
			<p>
			{{#if query}}<span>{{numberOfHits}}</span> hits{{#if hits}}:{{/if}}{{/if}}
			</p>
			{{#each hits}}
			<p>
				<h1 class="title is-5">
					<span class="has-text-link"><a href="/#/browsefile/{{fileId}}">
						{{filename}}</a></span>
				</h1>
				<h1 class="subtitle is-6"
					<span class="has-text-link"><a href="/#/browsehost/{{certfp}}">
						{{hostname}}</a></span>
					<br>
					<span class="excerpt">{{{excerpt}}}</span>
				</h1>
			</p>
			{{/each}}
		</div>
	</div>
</section>
